<layout version="0.1.0">
    <!-- Product Page -->
    <catalog_product_view>
        <reference name="head">
            <block type="core/template" name="prognoos-head" template="prognoos/product/product-head.phtml"></block>
        </reference>

        <reference name="footer">
            <block type="core/template" name="prognoos-footer" template="prognoos/product/product-footer.phtml"></block>
        </reference>
    </catalog_product_view>

    <!-- Category Page -->
    <catalog_category_view>
        <reference name="head">
            <block type="core/template" name="category-head" template="prognoos/category/category-head.phtml"></block>
        </reference>

        <reference name="content">
            <block type="prognoos/showcase" name="category_recommended_showcase"
                   template="prognoos/showcase/recommended.phtml">
                <action method="setData">
                    <name>page_name</name>
                    <value>category</value>
                </action>
                <action method="setData">
                    <name>showcase_type</name>
                    <value>recommended</value>
                </action>
            </block>

            <block type="prognoos/showcase" name="category_top_visited_showcase"
                   template="prognoos/showcase/top-visited.phtml">
                <action method="setData">
                    <name>page_name</name>
                    <value>category</value>
                </action>
                <action method="setData">
                    <name>showcase_type</name>
                    <value>most_visited</value>
                </action>
            </block>

            <block type="prognoos/showcase" name="category_who_saw_also_saw_showcase"
                   template="prognoos/showcase/who-saw-also-saw.phtml">
                <action method="setData">
                    <name>page_name</name>
                    <value>category</value>
                </action>
                <action method="setData">
                    <name>showcase_type</name>
                    <value>who_saw_also_saw</value>
                </action>
            </block>
        </reference>
    </catalog_category_view>

    <!-- Home Page -->
    <cms_index_index>
        <reference name="head">
            <block type="core/template" name="home-head" template="prognoos/home/home-head.phtml"></block>
        </reference>
    </cms_index_index>

    <!-- Checkout Cart Page -->
    <checkout_cart_index>
        <reference name="head">
            <block type="core/template" name="cart-head" template="prognoos/cart/cart-head.phtml"></block>
        </reference>
    </checkout_cart_index>

    <!-- Purchase Cart Page -->
    <onepagecheckout_index_index>
        <reference name="head">
            <block type="core/template" name="cart-head" template="prognoos/purchase/purchase-head.phtml"></block>
        </reference>
    </onepagecheckout_index_index>

    <!-- Footer (General) -->
    <default>
        <reference name="footer">
            <block type="page/html_footer" template="prognoos/general/prognoos-footer.phtml" name="prognoos-footer"/>
        </reference>
    </default>
</layout>