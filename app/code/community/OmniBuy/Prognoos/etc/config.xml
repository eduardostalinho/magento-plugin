                                <div class="price-box">
                                    <span class="regular-price" id="product-price-410-widget-new-grid">
                                        <span class="price">##PRICE##</span>
                                    </span>
                                </div>
                            </div>
                        </li>
                    ]]>
                </layout_most_visited>
            </category>

            <!-- Product Showcase -->
            <product>
                <qty_similar_product>4</qty_similar_product>
                <qty_who_saw_also_saw>4</qty_who_saw_also_saw>

                <layout_similar_product>
                    <![CDATA[
                        <li class="item last">
                            <a href="##URL##" title="Chelsea Tee" class="product-image">
                                <img src="##IMG##" alt="##NAME##"/>
                            </a>

                            <div class="product-info">
                                <h3 class="product-name">
