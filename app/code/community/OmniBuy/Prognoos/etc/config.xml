                <qty_who_bought_also_bought>4</qty_who_bought_also_bought>

                <layout_who_bought_also_bought>
                    <![CDATA[
                        <li class="item last">
                            <a href="##URL##" title="Chelsea Tee" class="product-image">
                                <img src="##IMG##" alt="##NAME##"/>
                            </a>

                            <div class="product-info">
                                <h3 class="product-name">
                                    <a href="##URL##" title="##NAME##">##NAME##</a>
