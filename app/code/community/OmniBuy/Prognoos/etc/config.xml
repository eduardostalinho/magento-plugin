                            </div>
                        </li>
                    ]]>
                </layout_who_saw_also_saw>

                <layout_best_sellers>
                    <![CDATA[
                        <li class="item last">
                            <a href="##URL##" title="Chelsea Tee" class="product-image">
                                <img src="##IMG##" alt="##NAME##"/>
                            </a>

                            <div class="product-info">
                                <h3 class="product-name">
                                    <a href="##URL##" title="##NAME##">##NAME##</a>
                                </h3>

                                <div class="price-box">
                                    <span class="regular-price" id="product-price-410-widget-new-grid">
                                        <span class="price">##PRICE##</span>
                                    </span>
                                </div>
                            </div>
                        </li>
                    ]]>
                </layout_best_sellers>
            </home>

            <!-- Category Showcase -->
            <category>
                <qty_most_visited_products>4</qty_most_visited_products>

                <layout_most_visited>
                    <![CDATA[
                        <li class="item last">
                            <a href="##URL##" title="Chelsea Tee" class="product-image">
                                <img src="##IMG##" alt="##NAME##"/>
                            </a>

                            <div class="product-info">
